generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ═══════════════════════════════════════════════════════════════
// USER & TIER SYSTEM
// ═══════════════════════════════════════════════════════════════

enum UserRole {
  PLAYER
  ADMIN
  TEAM1
  TEAM2
  TEAM3
  TEAM4
  SUPER_ADMIN
}

enum UserStatus {
  ACTIVE
  CRITICAL
  HIGHLY_CRITICAL
  INACTIVE
}

enum TierLevel {
  BRONZE
  SILVER
  GOLD
}

model User {
  id              Int              @id @default(autoincrement())
  username        String           @unique
  password        String
  name            String
  email           String           @unique
  phone           String?
  role            UserRole         @default(PLAYER)
  status          UserStatus       @default(ACTIVE)
  balance         Decimal          @default(1000) @db.Decimal(10, 2)
  
  // Tier System
  tier            TierLevel        @default(BRONZE)
  tierPoints      Int              @default(0)
  weeklyDeposit   Decimal          @default(0) @db.Decimal(10, 2)
  
  // Gamification
  totalWagered    Decimal          @default(0) @db.Decimal(10, 2)
  totalWon        Decimal          @default(0) @db.Decimal(10, 2)
  gamesPlayed     Int              @default(0)
  winStreak       Int              @default(0)
  longestStreak   Int              @default(0)
  
  // Referral System
  referralCode    String           @unique @default(cuid())
  referredBy      Int?
  referrer        User?            @relation("Referrals", fields: [referredBy], references: [id])
  referrals       User[]           @relation("Referrals")
  
  // 2FA
  twoFactorSecret String?
  twoFactorEnabled Boolean         @default(false)
  
  // Timestamps
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  lastLoginAt     DateTime?
  lastActivityAt  DateTime?
  
  // Relations
  transactions    Transaction[]
  bonuses         Bonus[]
  activityLogs    ActivityLog[]
  attendance      Attendance[]
  notifications   Notification[]
  sessions        Session[]

    // Social Media (NEW)
  facebook        String?
  telegram        String?
  instagram       String?
  twitterX        String?
  snapchat        String?

  // Player Profile (NEW)
  source          String?   // "Instagram Ad", "Friend Referral" etc.
  cashoutLimit    Decimal   @default(250) @db.Decimal(10, 2)
  currentStreak   Int       @default(0)
  lastPlayedDate  DateTime?
  playTimeMinutes Int       @default(0)

  // Friends (self-relation, NEW)
  friends         User[]    @relation("Friends")
  friendOf        User[]    @relation("Friends")
}

// ═══════════════════════════════════════════════════════════════
// TIER CONFIGURATION
// ═══════════════════════════════════════════════════════════════

model TierConfig {
  id                  Int       @id @default(autoincrement())
  tier                TierLevel @unique
  minDeposit          Decimal   @db.Decimal(10, 2)
  maxDeposit          Decimal   @db.Decimal(10, 2)
  dailyCashoutLimit   Decimal   @db.Decimal(10, 2)
  weeklyCashoutLimit  Decimal   @db.Decimal(10, 2)
  bonusMultiplier     Decimal   @db.Decimal(3, 2)
  freeplayDaily       Decimal   @db.Decimal(10, 2)
  freeplayWeekly      Decimal   @db.Decimal(10, 2)
  pointsRequired      Int
  benefits            String[]
  updatedAt           DateTime  @updatedAt
}

// ═══════════════════════════════════════════════════════════════
// TRANSACTIONS
// ═══════════════════════════════════════════════════════════════

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  BONUS
  FREEPLAY
  REFERRAL
  ADJUSTMENT
  WIN
  LOSS
  ATTENDANCE
}

enum TransactionStatus {
  PENDING
  COMPLETED
  REJECTED
  CANCELLED
  PROCESSING
}

enum PaymentMethod {
  PAYPAL
  STRIPE
  CRYPTO
  UPI
  BANK_TRANSFER
  WALLET
}

model Transaction {
  id              Int               @id @default(autoincrement())
  userId          Int
  type            TransactionType
  amount          Decimal           @db.Decimal(10, 2)
  bonus           Decimal           @default(0) @db.Decimal(10, 2)
  paymentMethod   PaymentMethod?
  status          TransactionStatus @default(PENDING)
  
  // Payment Details
  paymentId       String?
  paymentGateway  String?
  
  // Metadata
  description     String?
  notes           String?
  ipAddress       String?
  
  // Admin Actions
  approvedBy      Int?
  approvedAt      DateTime?
  rejectedReason  String?
  
  createdAt       DateTime          @default(now())
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
  @@index([status, createdAt])
}

model ProfitStat {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())  // snapshot date
  profit    Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())
}

// ═══════════════════════════════════════════════════════════════
// BONUS SYSTEM
// ═══════════════════════════════════════════════════════════════

enum BonusType {
  WELCOME
  DEPOSIT_MATCH
  CASHBACK
  LOYALTY
  REFERRAL
  FREEPLAY_DAILY
  FREEPLAY_WEEKLY
  SPIN_THE_WHEEL
  ATTENDANCE
  BIRTHDAY
  CUSTOM
}

model Bonus {
  id          Int        @id @default(autoincrement())
  userId      Int
  type        BonusType
  amount      Decimal    @db.Decimal(10, 2)
  description String
  claimed     Boolean    @default(false)
  claimedAt   DateTime?
  expiresAt   DateTime?
  
  // Wagering Requirements
  wagerRequired Decimal? @db.Decimal(10, 2)
  wagerMet      Decimal  @default(0) @db.Decimal(10, 2)
  
  createdAt   DateTime   @default(now())
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, claimed])
}

// ═══════════════════════════════════════════════════════════════
// ATTENDANCE SYSTEM
// ═══════════════════════════════════════════════════════════════

model Attendance {
  id              Int      @id @default(autoincrement())
  userId          Int
  date            DateTime @default(now())
  streak          Int      @default(1)
  rewardClaimed   Boolean  @default(false)
  rewardAmount    Decimal? @db.Decimal(10, 2)
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, date])
  @@index([userId, date])
}

// ═══════════════════════════════════════════════════════════════
// ISSUES SYSTEM
// ═══════════════════════════════════════════════════════════════

model Issue {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  playerName  String?   // Name of the player reporting the issue
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  status      String    @default("UNRESOLVED") // UNRESOLVED or RESOLVED
  priority    String    @default("MEDIUM")     // LOW, MEDIUM, HIGH
}

// ═══════════════════════════════════════════════════════════════
// Teams SYSTEM
// ═══════════════════════════════════════════════════════════════

model Team {
  id            Int      @id @default(autoincrement())
  teamName      String
  isShiftActive Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  shifts        Shift[]
}

model Shift {
  id         Int       @id @default(autoincrement())
  teamId     Int
  teamRole   String
  team       Team      @relation(fields: [teamId], references: [id])
  startTime  DateTime
  endTime    DateTime?
  duration   Int?      // stored in minutes, computed when shift ends
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
}

/// ═══════════════════════════════════════════════════════════════
// EXPENSES SECTION
// ═══════════════════════════════════════════════════════════════
enum ExpenseCategory {
  POINT_RELOAD
  SERVICE_FEE
  OTHER
}

model Expense {
  id          String          @id @default(cuid())
  gameId      String?
  game        Game?           @relation(fields: [gameId], references: [id])
  details     String
  category    ExpenseCategory @default(POINT_RELOAD)
  amount      Float           @default(0)
  pointsAdded Int             @default(0)
  notes       String?
  paymentMade Float?          // filled when a bulk payment is recorded
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@map("expenses")
}

// ═══════════════════════════════════════════════════════════════
// GAMES
// ═══════════════════════════════════════════════════════════════

model Game {
  id          String      @id @default(cuid())
  name        String      @unique
  slug        String      @unique
  iconUrl     String?
  pointStock  Float       @default(0)
  status      GameStatus  @default(HEALTHY)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  expenses    Expense[]   // ← add this line

  @@map("games")
}
enum GameStatus {
  HEALTHY
  LOW_STOCK
  DEFICIT
}


// ═══════════════════════════════════════════════════════════════
// WALLETS SECTION
// ═══════════════════════════════════════════════════════════════
model Wallet {
  id          Int      @id @default(autoincrement())
  name        String
  method      String   // 'Bitcoin', 'Chime', 'PayPal', etc.
  identifier  String?
  balance     Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("wallets")
}

// ═══════════════════════════════════════════════════════════════
// NOTIFICATIONS
// ═══════════════════════════════════════════════════════════════

enum NotificationType {
  TRANSACTION
  BONUS
  PROMOTION
  SYSTEM
  SECURITY
}

model Notification {
  id        Int              @id @default(autoincrement())
  userId    Int
  type      NotificationType
  title     String
  message   String
  read      Boolean          @default(false)
  actionUrl String?
  
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, read, createdAt])
}

// ═══════════════════════════════════════════════════════════════
// SESSIONS (for real-time tracking)
// ═══════════════════════════════════════════════════════════════

model Session {
  id          String   @id @default(cuid())
  userId      Int
  token       String   @unique
  ipAddress   String
  userAgent   String?
  lastActive  DateTime @default(now())
  expiresAt   DateTime
  
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, expiresAt])
}

// ═══════════════════════════════════════════════════════════════
// ACTIVITY LOGS
// ═══════════════════════════════════════════════════════════════

enum ActivityType {
  LOGIN
  LOGOUT
  DEPOSIT
  WITHDRAWAL
  BONUS_CLAIMED
  USER_CREATED
  USER_UPDATED
  USER_SUSPENDED
  TRANSACTION_APPROVED
  TRANSACTION_REJECTED
  TIER_UPGRADED
  SETTINGS_CHANGED
  PASSWORD_CHANGED
  TWO_FA_ENABLED
  TWO_FA_DISABLED
}

model ActivityLog {
  id           Int          @id @default(autoincrement())
  userId       Int
  activityType ActivityType
  description  String
  ipAddress    String?
  userAgent    String?
  metadata     Json?
  
  createdAt    DateTime     @default(now())
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
  @@index([activityType, createdAt])
}

// ═══════════════════════════════════════════════════════════════
// SYSTEM SETTINGS
// ═══════════════════════════════════════════════════════════════

model SystemSetting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  category  String   @default("general")
  updatedAt DateTime @updatedAt
}

// ═══════════════════════════════════════════════════════════════
// EMAIL QUEUE
// ═══════════════════════════════════════════════════════════════

enum EmailStatus {
  PENDING
  SENT
  FAILED
}

model EmailQueue {
  id        Int         @id @default(autoincrement())
  to        String
  subject   String
  body      String
  status    EmailStatus @default(PENDING)
  attempts  Int         @default(0)
  error     String?
  sentAt    DateTime?
  
  createdAt DateTime    @default(now())
  
  @@index([status, createdAt])
}

// ═══════════════════════════════════════════════════════════════
// RATE LIMITING
// ═══════════════════════════════════════════════════════════════

model RateLimit {
  id         Int      @id @default(autoincrement())
  identifier String   // IP or user ID
  endpoint   String
  count      Int      @default(1)
  resetAt    DateTime
  
  @@unique([identifier, endpoint])
  @@index([resetAt])
}